<Page x:Class="lvl8.AddProduct_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:lvl8"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddProduct_Page">

    <Grid Background="Ivory">
        <Button Content="Save" HorizontalAlignment="Left" Margin="296,382,0,0" VerticalAlignment="Top" FontSize="20" Width="180" Click="Button_SaveClick"/>

        <Label Content="Title" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.542,0.536" FontSize="20"/>
        <Label Content="Cost" HorizontalAlignment="Left" Margin="10,114,0,0" VerticalAlignment="Top" FontSize="20"/>

        <TextBox Text="{Binding Title}" HorizontalAlignment="Center" Margin="0,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="780" FontSize="20"/>
        <TextBox Text="{Binding Cost}" HorizontalAlignment="Center" Margin="0,156,0,0" VerticalAlignment="Top" Width="780" FontSize="20"/>

    </Grid>
</Page>
